<UserControl x:Class="Photo_Manager.Views.PhotoGalleryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photo_Manager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="mainViewGrid"
          Margin="0,20,0,0">
        <Button Width="250"
                 Height="45"
                 Content="Filtruj"
                 FontSize="22"
                 Background="#CCFFFFFF"
                VerticalAlignment="Top">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Grid x:Name="mainViewGridItems"
              Margin="10,90,5,10" Loaded="PhotoGalleryView_Loaded">
            <ScrollViewer>
                <WrapPanel  x:Name="PhotoGalleryStackPanel">
                </WrapPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
